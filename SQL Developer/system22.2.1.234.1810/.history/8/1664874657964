where substr(text,1,1) = 't';
?
select *
from reg_tab
where regexp_like (text, '^t');


-- 2.  text ÄÃ·³ÀÇ ¹®ÀÚ¿­¿¡¼­ 't'·Î ³¡³ª´Â µ¥ÀÌÅÍ °Ë»ö
select *
from reg_tab
where substr(lower(text),-1,1) = 't';
--where substr(text,-1,1) = 't';
?
select *
from reg_tab
where regexp_like (text, 't$');
?
