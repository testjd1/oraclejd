-- ? 1. 2003³â¿¡ ÀÔ»çÇÑ »ç¿øµéÀÇ »ç¹ø, ÀÌ¸§, ÀÔ»çÀÏÀ» Ãâ·Â
select employee_id, concat(first_name,last_name) as fullname, hire_date
from employees
where To_char(hire_date,'yyyy') = 2003 ;


-- 2. ¾÷¹«°¡ FI_ACCOUNT / FI_MGR / SA_MAN / SA_REP ÀÎ »ç¿øµéÀÇ Á¤º¸¸¦ Ãâ·Â
select *
from employees
where job_id  in('SA_MAN','FI_MGR','FI_ACCOUNT','SA_REP');

-- ?3. Ä¿¹Ì¼ÇÀ» ¹Ş´Â »ç¿øµéÀÇ ¸í´ÜÀ» Ãâ·Â
select *
from employees
where commission_pct is not null;

-- 4. ¾÷¹«°¡ SA_MAN ¶Ç´Â SA_REPÀÌ¸é "ÆÇ¸ÅºÎ¼­"¸¦ ±× ¿Ü´Â "±× ¿Ü ºÎ¼­"¶ó°í Ãâ·Â
SELECT job_id, decode( job_id, 'SA_MAN', 'ÆÇ¸ÅºÎ¼­', 'SA_REP', 'ÆÇ¸ÅºÎ¼­', '±× ¿Ü ºÎ¼­') AS ºÎ¼­ 
FROM employees;

-- 5. ¿¬µµº°·Î ÀÔ»çÀÚµéÀÇ ÃÖ¼Ò±Ş¿©, ÃÖ´ë ±Ş¿©, ±Ş¿©ÀÇ ÃÑÇÕ ±×¸®°í Æò±Õ ±Ş¿©¸¦ ±¸ÇÏ½Ã¿À
select To_char(hire_date,'yyyy') as year, min(salary), max(salary), sum(salary), round(avg(salary),-2) as avg
from employees
group by To_char(hire_date,'yyyy')
order by To_char(hire_date,'yyyy') ;

-- 6.ºÎ¼­º° Æò±Õ ±Ş¿©°¡ $10,000 ÀÌ»óÀÎ ºÎ¼­¸¸ ±¸ÇÏ½Ã¿À. ( Æò±Õ±Ş¿©°¡ ³ôÀº ¼øÀ¸·Î )
select department_id, round(avg(salary),-2) as avgs
from employees
group by department_id
having  avg(salary) >= 10000
order by avg(salary) desc;


-- 7.ºÎ¼­º° ÃÖ´ë ±Ş¿©¸¦ ±¸ÇÏ½Ã¿À 
select department_id , max(salary)
from employees
group by department_id
order by department_id;

